<!-- utilisation de formulaires, listes et arbres -->
<page id="admin_test" titre="Frankiz : administration" css="test.css"> <!-- avec une CSS spécifique -->

	<!-- permet de modifier une ensemble de paramètre d'un unique enregistrement à la fois -->
	<formulaire id="test" titre="Ton annonce" action="proposition/annonce.php">
		<commentaire>Formulaire montrant ce qu'il est possible de faire</commentaire>
		
		<champ id="champ1" titre="Champ de texte" valeur="Valeur par défaut"/>
		<champ id="champ2" titre="Champ de texte non modifiable" valeur="Tu peux pas me changer" modifiable="non"/>
		<zonetext id="champ3" titre="Grande zone de texte" valeur="Valeur par défaut"/>
		
		<fichier id="fichier" titre="Ton image" taille="250000"/>

		<textsimple valeur="Commentaire, information"/>

		<choix titre="Menu" id="choix1" type="combo" valeur="17">
			<option titre="trois" id="3"/>
			<option titre="dix-sept" id="17"/>
			<option titre="vingt quatre" id="24"/>
		</choix>
		<choix titre="Boutons radios" id="choix2" type="radio" valeur="17">
			<option titre="trois" id="3"/>
			<option titre="dix-sept" id="17"/>
			<option titre="vingt quatre" id="24"/>
		</choix>
		<choix titre="Case à cocher" id="choix3" type="checkbox" valeur="17,24">
			<option titre="trois" id="3"/>
			<option titre="dix-sept" id="17"/>
			<option titre="vingt quatre" id="24"/>
		</choix>

		<bouton id='reset' titre="Effacer"/> <!-- contrairement aux autres boutons, si l'id est "reset", il faut créer un bouton reset et non un bouton submit -->
		<bouton id='test' titre="Tester"/>
		<bouton id='valid' titre='Valider' onClick="return window.confirm('Voulez vous vraiment valider votre annonce ?')"/>
	</formulaire>

	<!-- comme un formulaire, mais pouvant traiter plusieur enregistrement en même temps.
	     Idéal pour permettre des modifications d'enregistrement d'une table d'une base de données. -->
	<liste id="users" selectionnable="oui">
