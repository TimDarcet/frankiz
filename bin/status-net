$file="/var/www/frankiz2/cache/status";

use Net::Telnet;

@host=("frankiz","ircserver","xnetserver","polynews","kuzh","sil","poly","poly");
@port=(119,6667,5053,119,8080,1080,995,25);

open(STATUS,">$file");

for ($i = 0; $i <= $#host; $i++) {

   $hote=$host[$i];
   $po=$port[$i];
   $telnet = new Net::Telnet( Host => $hote, Port => $po, Timeout => 2, Errmode => "return");
   if ($telnet) {
      # connexion ok
      $telnet -> close;
      if($i == 6) { 
      		$res="<serveur nom='poly:pop' etat='up' />\n";
     }
     if($i == 7) { 
      		$res="<serveur nom='poly:smtp' etat='up' />\n";
     }
      if(($i !=6)&&($i != 7)) {
         $res="<serveur nom='$hote' etat='up' />\n";
      }
   }
   else {
      # connexion impossible
	if($i == 6) {
		$res="<serveur nom='poly:pop' etat='down' />\n";
	} 
	if($i == 7) {
		$res="<serveur nom='poly:smtp' etat='down' />\n";
	} 
	 if(($i !=6)&&($i != 7)) {
	$res="<serveur nom='$hote' etat='down' />\n"
	}
   }
   print STATUS $res;
}

close STATUS;
